<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#99FF5E3C" android:startColor="#99FF815E" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#FF896D" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#EF5636" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#FF896D" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#FF5E3C" android:startColor="#FF815E" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#FF896D" />
        </shape>
    </item>

</selector>
