<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
       
    </style>
    
    
    <style name="vip2_singleline">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    
    <style name="vip2_edittext" parent="@style/vip2_singleline">
        <item name="android:textSize">@dimen/y16</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/vip2_inputview_bg</item>
        <item name="android:textColor">#441a00</item>
        <item name="android:textColorHint">#99d7c0ac</item>
        <item name="android:textCursorDrawable">@drawable/vip2_edit_view_cursor</item>
    </style>

</resources>
